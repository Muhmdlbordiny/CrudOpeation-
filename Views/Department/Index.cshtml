@model List< Department>
@{
    Layout = "_AdvLayout";
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<a href="/Department/NewDept" class="btn btn-success">NewDepartment</a>
<br />
<table class="table table-bordered table-hover">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Manager</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Manger</td>
            <td><a href="/Department/details/@item.Id">Details</a></td>

        </tr>

    }
</table>
